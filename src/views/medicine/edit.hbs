<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <!--Makes reference 'add' route with execute by 'post' method (Line 15 en medicine.js) -->
                    <form action="/meds/edit/{{med.MedicamentoID}}" method="POST"> 
                        <div class="form-group">
                            <input type="text" class="form-control" name="SustanciaActiva" placeholder="Sustancia Activa" 
                            value="{{med.SustanciaActiva}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="Nombre" placeholder="Nombre"
                            value="{{med.Nombre}}">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="Presentacion" placeholder="Presentación"
                            value="{{med.Presentacion}}">
                        </div>
                        <div class="form-group">
                            <input type="number" step="0.01" class="form-control" name="P_Proveedor" placeholder="$ Proveedor"
                            value="{{med.P_Proveedor}}">
                        </div>
                        <div class="form-group">
                            <input type="number" step="0.01" class="form-control" name="P_Publico" placeholder="$ Público"
                            value="{{med.P_Publico}}">
                        </div>
                        <div class="form-group">
                            <input type="number" step="0.01" class="form-control" name="P_Descuento" placeholder="$ Descuento"
                            value="{{med.P_Descuento}}">
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="Saldo" placeholder="Saldo"
                            value="{{med.Saldo}}">
                        </div>
                        <div class="form-group">
                            <div>
                                <input id="active"type="checkbox" name="Activo" 
                                value="{{med.Activo}}">
                                <label for="Activo">Activo</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>